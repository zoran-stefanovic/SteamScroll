{
	"Name": "Steamscroll",
	"Version": "1.0.0.0",
	"Author": "Zoran Stefanovic",
	"Actions": [
		{
			"Name": "Steam Game Selector",
			"UUID": "com.zstefanovic.steamscroll.dial",
			"Tooltip": "Scroll through installed Steam games using the dial.",
			"Icon": "imgs/actions/steamscroll",
			"PropertyInspectorPath": "ui/dial-game-selector.html",
			"SupportedInMultiActions": true,
			"Controllers": [
				"Encoder"
			],
			"Encoder": {
				"background": "touchscreen-background",
				"layout": "GameWheelLayout.json"
			},  
			"States": [
				{
					"Image": "imgs/actions/steamscrollaction",
					"TitleAlignment": "middle",
					"FontSize": 8
				}
			]  
			
		}
	],
	"Category": "Steamscroll",
	"CategoryIcon": "imgs/plugin/steamscrollcategory",
	"CodePath": "bin/plugin.js",
	"Description": "Use the dial to browse through Steam games and press the dial to launch them.",
	"Icon": "imgs/plugin/steamscroll",
	"SDKVersion": 2,
	"Software": {
		"MinimumVersion": "6.4" 
	},
	"OS": [
		{
			"Platform": "mac",
			"MinimumVersion": "10.15"
		},
		{
			"Platform": "windows",
			"MinimumVersion": "10"
		}
	],
	"Nodejs": {
		"Version": "20",
		"Debug": "enabled"
	},
	"UUID": "com.zstefanovic.steamscroll"
}
