{
	"extends": "@tsconfig/node20/tsconfig.json",
	"compilerOptions": {
		"typeRoots": ["./node_modules/@types", "./src/types"],
		"customConditions": [
			"node"
		],
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"noImplicitOverride": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}